{
  "compilerOptions": {
    
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@/api/*": ["/api/*"]
    },

    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/tailwind-ui/InputWithCurrency.tsx", "src/pages/markd/index.jsx"],
  "exclude": ["node_modules"]
}
